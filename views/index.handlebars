<div class="row">
    <div class="col s12">
        <h1>Simple File Upload</h1>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <a class="waves-effect waves-light btn green createForm">Add Document</a>
    </div>
</div>

<div class="row">
    <div class="col s12">

        <table class="responsive-table">
            <thead>
                <tr>
                    <th>Document Name</th>
                    <th>Document Date</th>
                    <th>Description</th>
                    <th>View</th>
                </tr>
            </thead>
            <tbody>
                {{#each documents}}
                <tr>
                    <td>{{this.document_name}}</td>
                    <td>{{this.docdate}}</td>
                    <td>{{this.description}}</td>
                    <td><a href="{{this.image}}" class="btn grey waves-effect waves-light" target="_blank">View Document</a></td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</div>